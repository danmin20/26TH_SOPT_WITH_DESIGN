<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.challenge.SuperChallengeFragment">

    <TextView
        android:id="@+id/top_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:text="조회수 TOP3"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="38dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start">

            <ImageView
                android:id="@+id/top_first"
                android:layout_width="104dp"
                android:layout_height="86dp"
                android:layout_gravity="start"
                android:background="#999999" />

            <ImageView
                android:id="@+id/challenge_ranking_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-6.5dp"
                android:layout_marginTop="-4dp"
                android:src="@drawable/cha_img_ranking" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/top_second"
                android:layout_width="104dp"
                android:layout_height="86dp"
                android:layout_gravity="center_horizontal"
                android:background="#999999" />

            <ImageView
                android:id="@+id/challenge_ranking_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-6.5dp"
                android:layout_marginTop="-4dp"
                android:src="@drawable/cha_img_ranking" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end">

            <ImageView
                android:id="@+id/top_third"
                android:layout_width="104dp"
                android:layout_height="86dp"
                android:layout_gravity="end"
                android:background="#999999" />

            <ImageView
                android:id="@+id/challenge_ranking_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-6.5dp"
                android:layout_marginTop="-4dp"
                android:src="@drawable/cha_img_ranking" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="138dp">

        <TextView
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="모든 작품"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/all_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="124dp"
            android:text="업데이트순"
            android:textColor="#e42707"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/all_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="182dp"
            android:text="조회순"
            android:textColor="#e42707"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/all_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="84dp"
            android:text="별점순"
            android:textColor="#e42707"
            android:textSize="10sp"
            android:textStyle="bold" />
    </FrameLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/challenge_list_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="161dp"
        android:theme="@style/ChallengeListTabTheme">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/challenge_list_tablayout"
            android:layout_width="match_parent"
            android:layout_height="29dp" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/challenge_list_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp" />
</FrameLayout>
