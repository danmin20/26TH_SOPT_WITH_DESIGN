<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.challenge.SuperChallengeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="38dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start">

            <ImageView
                android:id="@+id/top_first"
                android:layout_width="104dp"
                android:layout_height="86dp"
                android:layout_gravity="start"
                android:background="#999999" />

            <ImageView
                android:id="@+id/challenge_ranking_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-6.5dp"
                android:layout_marginTop="-4dp"
                android:src="@drawable/cha_img_ranking" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/top_second"
                android:layout_width="104dp"
                android:layout_height="86dp"
                android:layout_gravity="center_horizontal"
                android:background="#999999" />

            <ImageView
                android:id="@+id/challenge_ranking_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-6.5dp"
                android:layout_marginTop="-4dp"
                android:src="@drawable/cha_img_ranking" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end">

            <ImageView
                android:id="@+id/top_third"
                android:layout_width="104dp"
                android:layout_height="86dp"
                android:layout_gravity="end"
                android:background="#999999" />

            <ImageView
                android:id="@+id/challenge_ranking_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-6.5dp"
                android:layout_marginTop="-4dp"
                android:src="@drawable/cha_img_ranking" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/top_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:text="조회수 TOP3"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_challenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_challenge" />

</FrameLayout>